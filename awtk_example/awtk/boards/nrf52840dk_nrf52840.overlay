arduino_spi: &spi3 {
	compatible = "nordic,nrf-spim";
	status = "okay";
	sck-pin = <47>;
	miso-pin = <46>;
	mosi-pin = <45>;
	cs-gpios = <&gpio1 12 0>;

	ili9340@0 {
		compatible = "ilitek,ili9340";
		label = "DISPLAY";
		spi-max-frequency = <32000000>;
		reg = <0>;
		cmd-data-gpios = <&gpio1 11 GPIO_ACTIVE_LOW>;
	};
};
